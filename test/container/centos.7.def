Bootstrap: docker
From: centos:7

%post
    yum -y update
    yum -y install centos-release-scl
    yum-config-manager --enable rhel-server-rhscl-7-rpms
    yum -y install devtoolset-7
    yum -y install epel-release
    yum -y install gcc-gfortran wget curl which git xz patch procps unzip python3 cmake3 hostname redhat-lsb-core
    yum -y clean all

    # This enables devtoolset-7 globally!
    profile="/etc/profile.d/enable-devtoolset-7.sh"
    cat <<EOF > ${profile}
    #!/bin/bash
    source scl_source enable devtoolset-7
    EOF
    chmod a+x "${profile}"

    # This enables cmake3 globally!
    alternatives --install /usr/local/bin/cmake cmake /usr/bin/cmake3 20 \
    --slave /usr/local/bin/ctest ctest /usr/bin/ctest3 \
    --slave /usr/local/bin/cpack cpack /usr/bin/cpack3 \
    --slave /usr/local/bin/ccmake ccmake /usr/bin/ccmake3 \
    --family cmake
