# Rebuild:
#   singularity build -f -F gsi-debian-8.sif gsi-debian-8.def

Bootstrap: docker
From: debian:8

%post
    apt-get update
    apt-get -y upgrade
    apt-get -y --no-install-recommends install sed curl ca-certificates wget xz-utils bzip2 gzip unzip tar
    apt-get -y --no-install-recommends install python3 g++ gcc gfortran make patch git
    # Things for our testing system:
    apt-get -y install cmake hostname lsb-release

    mkdir -p /cvmfs /etc/spack

%files
    gsi-debian-8-gcc.yaml /etc/spack/compilers.yaml

%environment
    PATH="/cvmfs/it.gsi.de/cmake/3.15.3/bin:$PATH"
